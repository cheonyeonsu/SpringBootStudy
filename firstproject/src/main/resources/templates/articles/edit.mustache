{{>layouts/header}}

{{#article}} <!--article 사용 범위 지정-->
<form class="container" action="" method="post"> <!--어디로 보낼지:action, 어떻게 보낼지:post-->
    <div class="mb-3">
        <label class="form-label">제목</label>
        <!--dto의 필드명과 동일한 이름 넣어줘야 데이터가 dto로 연결되어 전달됨-->
        <input type="text" class="form-control" name="title" value="{{title}}"> <!--value로 수정할 내용 보여줌-->
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3"
                  name="content">{{content}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">제출</button>
    <a href="/articles/{{id}}">Back</a> <!--모델에 article등록되어있어서 .id>>해당 id값 추출해 URL로 사용가능 -->
</form>

{{/article}}

{{>layouts/footer}}
